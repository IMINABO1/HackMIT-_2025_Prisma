{
  "name": "Athena",
  "description": "Stateful AI companion for learning - sidebar extension.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "128": "icons/better.jpeg"
  },
  "permissions": ["activeTab", "storage", "contextMenus", "scripting", "sidePanel", "tabs", "nativeMessaging"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.tandem.run/"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  } ,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Athena",
    "default_icon": {
      "128": "icons/better.jpeg"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
